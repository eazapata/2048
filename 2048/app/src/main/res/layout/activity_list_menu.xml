<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".game.MainActivity"
    android:background="@color/background"
    android:forceDarkAllowed="false">

    <TextView
        android:text="2048"
        android:textSize="@dimen/splash_title_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/brown"
        android:layout_marginBottom="50dp"
        android:shadowColor="@android:color/white"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="20"/>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:src="@drawable/captura2048"/>
    <EditText
        android:id="@+id/player_name_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_player_name"
        android:textAlignment="center"
        android:hint="@string/player_name_hint"
        android:gravity="center_horizontal" />

    <ListView
        android:id="@+id/listView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/background"
        android:divider="@drawable/divider"
        android:dividerHeight="4sp"/>

</LinearLayout>